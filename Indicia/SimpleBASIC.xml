<?xml version="1.0" encoding="UTF-8"?>
<TokenContext xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://github.com/mamift/Indicium TokenSchema.xsd" xmlns="https://github.com/mamift/Indicium">
  <!-- This can tokenise BASIC keywords, identifers and symbols. Whitespace inside XML elements is ignored when the regex is processed. -->
  <Token Id="Let"        Description="Let keyword">           [Ll][Ee][Tt]</Token>
  <Token Id="Print"      Description="Print keyword">         [Pp][Rr][Ii][Nn][Tt]</Token>
  <Token Id="Cls"        Description="Cls keyword">           [Cc][Ll][Ss]</Token>
  <Token Id="Rem"        Description="Rem keyword">           [Rr][Ee][Mm][^\r\n]*</Token>
  <Token Id="End"        Description="End keyword">           [Ee][Nn][Dd]</Token>
  <Token Id="Goto"       Description="Goto keyword">          [Gg][Oo][Tt][Oo]</Token>
  <Token Id="For"        Description="For keyword">           [Ff][Oo][Rr]</Token>
  <Token Id="Step"       Description="Step keyword">          [Ss][Tt][Ee][Pp]</Token>
  <Token Id="Next"       Description="Next keyword">          [Nn][Ee][Xx][Tt]</Token>
  <Token Id="To"         Description="To keyword">            [Tt][Oo]</Token>
  <Token Id="Colon"      Description="Colon (:)">             \:</Token>
  <Token Id="Equals"     Description="Equals (=)">            =</Token>
  <Token Id="String"     Description="Strings">               \".*?\"</Token>
  <Token Id="Identifier" Description="Identifiers">           [a-zA-Z_][a-zA-Z0-9_]*</Token>
  <Token Id="Whitespace" Description="Whitespace">            [ \t]+</Token>
  <Token Id="Newline"    Description="Newline">               [\r\n]+</Token>
  <Token Id="Float"      Description="Floating-point Number"> [0-9]+\.+[0-9]+</Token>
  <Token Id="Integer"    Description="Integers">              [0-9]+</Token>
  <Token Id="Comment"    Description="Apostrophe Comment">    \'.*</Token>
  <Token Id="Lparen"     Description="Left Parenthesis">      \(</Token>
  <Token Id="Rparen"     Description="Right Parenthesis">     \)</Token>
  <Token Id="Asterisk"   Description="Asterisk">              \*</Token>
  <Token Id="Slash"      Description="Slash">                 \/</Token>
  <Token Id="Plus"       Description="Plus sign">             \+</Token>
  <Token Id="Minus"      Description="Minus sign">            \-</Token>
</TokenContext>