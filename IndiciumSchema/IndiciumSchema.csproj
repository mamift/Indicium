<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>Indicium.Schemas</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="SimpleBASIC.txt" />
    <None Remove="SimpleBASIC.xml" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="SimpleBASIC.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="SimpleBASIC.xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="XObjectsCore" Version="3.0.0.2" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Prototype1.xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="LinqToXsd gen .\ExpressionSchema.xsd -c .\TokenSchema.xsd.config" />
  </Target>

</Project>
